<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Flow.Views.ProfilePage"
             xmlns:viewmodels="clr-namespace:Flow.ViewModels"
             x:DataType="viewmodels:User_DatabaseViewModel"
             Title="ProfilePage">

    <VerticalStackLayout HorizontalOptions="CenterAndExpand" Spacing="20">
        <Label Text="Your Profile" 
               FontSize="24" 
               HorizontalOptions="Center" />

        <!-- Display Logged-in User's Credentials -->
        <Frame CornerRadius="20" HasShadow="True" Padding="10">
            <VerticalStackLayout>
                <!-- Labels for displaying user details -->
                <Label x:Name="UserIdLabel" Text="User ID: " />
                <Label x:Name="NameLabel" Text="First Name: " />
                <Label x:Name="UsernameLabel" Text="Username: " />
                <Label x:Name="PasswordLabel" Text="Password: " />
            </VerticalStackLayout>
        </Frame>

        <Button Command="{Binding SettingsCommand}"
                Text="Go back to Settings"
                FontSize="15"
                HeightRequest="50"
                CornerRadius="25"
                Margin="0, 20" />
    </VerticalStackLayout>
</ContentPage>
