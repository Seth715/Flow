<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Flow.ViewModels"
             xmlns:controls="clr-namespace:Plugin.Maui.Calendar.Controls;assembly=Plugin.Maui.Calendar"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="local:CalendarViewModel"
             x:Class="Flow.Views.CalendarPage"
             Title="Calendar">

    <controls:Calendar Events="{Binding Events}"
                       EventIndicatorColor="Red"
                       EventsScrollViewVisible="True"
                       ShowYearPicker="False">
        <controls:Calendar.EventTemplate>
            <DataTemplate>
                <StackLayout Padding="20,0,0,0">
                    <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="Medium"/>
                    <Label Text="{Binding Description}" FontSize="Small" LineBreakMode="WordWrap"/>
                </StackLayout>
            </DataTemplate>
        </controls:Calendar.EventTemplate>
    </controls:Calendar>
</ContentPage>
