<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Flow.Views.AdminCredentialPopup">

    <VerticalStackLayout Padding="20" Spacing="20">
        <!-- Header Label -->
        <Label Text="Admin Credentials"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Username Entry -->
        <Entry x:Name="UsernameEntry"
               Placeholder="Username"
               TextColor="Black"/>

        <!-- Password Entry -->
        <Entry x:Name="PasswordEntry"
               Placeholder="Password"
               IsPassword="True"
               TextColor="Black"/>

        <!-- Submit Button -->
        <Button Text="Submit"
                FontSize="18"
                BackgroundColor="#512BD4"
                TextColor="White"
                HeightRequest="50"
                Clicked="OnSubmit" />

        <!-- Cancel Button -->
        <Button Text="Cancel"
                FontSize="18"
                BackgroundColor="LightGray"
                TextColor="#512BD4"
                HeightRequest="50"
                Clicked="OnCancel" />
    </VerticalStackLayout>
</toolkit:Popup>
